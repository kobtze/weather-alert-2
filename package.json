{
  "name": "weather-alert-system",
  "version": "1.0.0",
  "description": "Weather Alert System with React Frontend and Node.js Backend",
  "scripts": {
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "start:backend": "cd backend && npm start",
    "start:backend:dev": "cd backend && npm run dev",
    "start:frontend": "cd frontend && npm start",
    "dev": "concurrently \"npm run start:backend:dev\" \"npm run start:frontend\"",
    "build": "cd frontend && npm run build",
    "test": "cd frontend && npm test",
    "test:backend": "cd backend && npm test"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "weather",
    "alerts",
    "react",
    "nodejs",
    "api"
  ],
  "author": "",
  "license": "MIT"
}

